.slider
  - @tweets.each do |tweet|
    = link_to "/tweets/#{tweet.id}", method: :get do
      .content_post{:style => "background-image: url(#{tweet.image});"}
      = tweet.image
      = simple_format(tweet.text)
      %span.name
        = tweet.user.nickname
